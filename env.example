# Joern Configuration
# Joern安装路径
JOERN_HOME=/usr/local/lib/joern

# 工作空间路径（存放临时文件）
JOERN_WORKSPACE=/Users/yourusername/.joern_mcp/workspace

# CPG缓存路径（存放生成的CPG文件）
JOERN_CPG_CACHE=/Users/yourusername/.joern_mcp/cpg_cache

# MCP Server Configuration
# MCP服务器主机地址
MCP_SERVER_HOST=localhost

# MCP服务器端口
MCP_SERVER_PORT=3000

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MCP_LOG_LEVEL=INFO

# Performance Configuration
# 最大并发查询数
MAX_CONCURRENT_QUERIES=5

# 查询超时时间（秒）
QUERY_TIMEOUT=300

# CPG缓存大小限制（字节，默认10GB）
CPG_CACHE_SIZE=10737418240

# 查询结果缓存大小（条目数）
QUERY_CACHE_SIZE=1000

# 查询结果缓存TTL（秒）
QUERY_CACHE_TTL=3600

# Security Configuration
# 允许访问的代码路径（逗号分隔）
ALLOWED_PATHS=/tmp/code_analysis,~/projects

# 是否允许执行自定义查询
ENABLE_CUSTOM_QUERIES=true

# 最大查询长度（字符）
MAX_QUERY_LENGTH=10000

# Java Configuration
# Java虚拟机选项（用于Joern）
_JAVA_OPTIONS=-Xmx8G -Xms2G

# Logging Configuration
# 日志文件路径
LOG_FILE_PATH=/Users/yourusername/.joern_mcp/logs

# 日志文件大小限制（MB）
LOG_FILE_SIZE=500

# 日志文件保留天数
LOG_RETENTION_DAYS=10

# Development Configuration (for development only)
# 是否启用调试模式
DEBUG=false

# 是否启用性能分析
ENABLE_PROFILING=false

# 是否启用详细日志
VERBOSE=false

